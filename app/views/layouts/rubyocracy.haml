!!! 1.1
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    - if !@item.nil?
      %title== #{@item[:title]} 
    - else
      %title='Not defined'
    %link{:rel => "stylesheet", :type => "text/css", :media => "screen", :href => "style/rubyocracy.css"}
    %script{:type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/rubyocracy.js"}
  %body
    = render 'layouts/header.haml'
    #container
      #content= yield
      = render 'layouts/footer.haml'
