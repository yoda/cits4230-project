
= render :partial => 'stories/story', :locals => {:story => @story}

%a{:id => "comments"}
#story-comments
  %h4 Comments on This Story
  
  %ul#comment-listing
    - @story.comments.each_with_index do |comment, index|
      %li{:class => "comment"}
        %p= comment.comment
        .comment-metadata
          Comment by
          = link_to "#{comment.user.name}", comment.user, :class => 'comment-author'
          about
          %span.comment-posted-at== #{Time.now - comment.created_at} minutes ago
  
  %form#story-add-comment{:action => "#", :method => "get"}
    %fieldset
      %legend Add a Comment
      .row.string
        %label.field-name Your Comment:
        %textarea{:name => "comment[contents]", :rows => 5, :cols => 70}
        .clearfix
        %p.field-errors
    %fieldset.buttons
      %input{:type => "submit", :value => "Add this Comment", :id => "submit-comment-button"}
